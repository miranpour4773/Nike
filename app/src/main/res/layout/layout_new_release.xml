<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:backgroundTint="@color/black"
    android:layout_width="300dp"
    android:layout_height="200dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/new_release"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Release"
            android:textColor="#B4B4B4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_brand_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Nike Air Max Plus"
            android:textColor="@color/white"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="@+id/new_release"
            app:layout_constraintTop_toBottomOf="@+id/new_release" />

        <androidx.appcompat.widget.AppCompatButton
            android:clickable="true"
            android:focusable="true"
            android:textColor="@color/black"
            android:layout_marginTop="24dp"
            android:textSize="11sp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/shape_button_in_new_release"
            android:text="Shop now"
            app:layout_constraintStart_toStartOf="@+id/txt_brand_Name"
            app:layout_constraintTop_toBottomOf="@+id/txt_brand_Name" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_brand"
            android:layout_marginTop="60dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/img_shoes"
            app:layout_constraintBottom_toBottomOf="@+id/constraintLayoutMain"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
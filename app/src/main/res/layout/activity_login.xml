<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <ImageView
      android:id="@+id/img_brand"
      android:layout_width="270dp"
      android:layout_height="wrap_content"
      android:scaleType="centerCrop"
      android:src="@drawable/nike"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <LinearLayout
      android:paddingBottom="5dp"
      android:id="@+id/linearLayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/img_brand">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edt_name_layout"
        android:layout_marginTop="10dp"
        app:hintEnabled="false"
        app:startIconTint="#848282"
        app:startIconDrawable="@drawable/ic_person"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <com.google.android.material.textfield.TextInputEditText
          android:inputType="textEmailAddress"
          android:layout_marginStart="50dp"
          android:layout_marginEnd="50dp"
          android:hint="Name or Email"
          android:id="@+id/edt_name"
          android:textColor="@color/black"
          android:textColorHint="#848282"
        android:background="@drawable/shape_edt_sing_in"
          android:layout_width="match_parent"
          android:layout_height="50dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        app:endIconTint="#848282"
        android:id="@+id/edt_pass_layout"
        app:endIconMode="password_toggle"
        android:layout_marginTop="10dp"
        app:hintEnabled="false"
        app:startIconTint="#848282"
        app:startIconDrawable="@drawable/ic_lock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <com.google.android.material.textfield.TextInputEditText
          android:inputType="textPassword"
          android:layout_marginStart="50dp"
          android:layout_marginEnd="50dp"
          android:hint="Password"
          android:id="@+id/edt_pass"
          android:textColor="@color/black"
          android:textColorHint="#848282"
          android:background="@drawable/shape_edt_sing_in"
          android:layout_width="match_parent"
          android:layout_height="50dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/forgot_pass"
        android:textColor="#848282"
        android:layout_marginStart="52dp"
        android:layout_marginTop="5dp"
        android:text="Frgot password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
<View
    android:layout_marginStart="52dp"
    android:background="#848282"
    android:layout_width="80dp"
    android:layout_height="1dp"/>

  </LinearLayout>

  <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/btn_sing_in"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="50dp"
      android:layout_marginEnd="50dp"
      android:background="@drawable/shape_btn_start"
      android:text="Get started"
      android:textColor="@color/white"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

  <FrameLayout
      android:id="@+id/frameSing_in"
      android:padding="20dp"
      android:layout_marginTop="20dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintEnd_toEndOf="@+id/btn_sing_in"
      app:layout_constraintStart_toStartOf="@+id/btn_sing_in"
      app:layout_constraintTop_toBottomOf="@+id/btn_sing_in">

    <LinearLayout
      android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
      <TextView
          android:id="@+id/sing_in"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Dont' have an account"
          android:textColor="#848282" />
      <TextView
          android:layout_gravity="center"
          android:id="@+id/sing_in2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="5dp"
          android:text="Sing Up"
          android:textColor="#494949"
          android:textStyle="bold" />

    </LinearLayout>

  </FrameLayout>

  <View
      android:visibility="invisible"
      android:id="@+id/unlock"
      android:layout_marginEnd="257dp"
      android:layout_marginTop="32dp"
      android:layout_width="5dp"
      android:layout_height="3dp"
      android:background="@color/white"
      app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
      app:layout_constraintEnd_toEndOf="@+id/linearLayout"
      app:layout_constraintStart_toStartOf="@+id/linearLayout"
      app:layout_constraintTop_toBottomOf="@+id/img_brand" />
</androidx.constraintlayout.widget.ConstraintLayout>
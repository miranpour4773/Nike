<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/img_brand"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/nike"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_brand">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:id="@+id/edt_name_layout"
            android:layout_marginTop="10dp"
            app:hintEnabled="false"
            app:startIconTint="#848282"
            app:startIconDrawable="@drawable/ic_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:inputType="textEmailAddress"
                android:hint="Name or Email"
                android:id="@+id/edt_name"
                android:textColor="@color/black"
                android:textColorHint="#848282"
                android:background="@drawable/shape_edt_sing_in"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            app:counterEnabled="true"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:id="@+id/edt_pass_layout"
            android:layout_marginTop="10dp"
            app:hintEnabled="false"
            app:startIconTint="#848282"
            app:startIconDrawable="@drawable/ic_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:inputType="textPassword"
                android:hint="Password"
                android:id="@+id/edt_pass"
                android:textColor="@color/black"
                android:textColorHint="#848282"
                android:background="@drawable/shape_edt_sing_in"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            app:counterEnabled="true"
            app:endIconTint="#848282"
            android:id="@+id/edt_confirm_pass_layout"
            app:endIconMode="password_toggle"
            android:layout_marginTop="10dp"
            app:hintEnabled="false"
            app:startIconTint="#848282"
            app:startIconDrawable="@drawable/ic_lock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                app:counterEnabled="true"
                android:inputType="textPassword"
                android:hint="Confirm Password"
                android:id="@+id/edt_confirm_pass"
                android:textColor="@color/black"
                android:textColorHint="#848282"
                android:background="@drawable/shape_edt_sing_in"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_change_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/shape_btn_start"
        android:text="Change Password"
        android:textSize="18dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <FrameLayout
        android:id="@+id/frameLayout_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:clickable="true"
    android:focusable="true"
    android:backgroundTint="#00000000"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView_shoes"
    app:strokeWidth="0dp"
    android:layout_marginTop="40dp"
    android:layout_width="310dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="27dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="310dp"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:id="@id/cardView_shoess"
            app:strokeWidth="0dp"
            android:layout_marginTop="70dp"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:cardCornerRadius="27dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">


                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:background="@drawable/shape_layout_shoes"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/txt_name_shoes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginBottom="150dp"
                    android:text="Nike Air max 270"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/view"
                    app:layout_constraintStart_toStartOf="@id/view" />

                <TextView
                    android:id="@+id/txt_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Men's shoes"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="@+id/txt_name_shoes"
                    app:layout_constraintTop_toBottomOf="@+id/txt_name_shoes" />

                <TextView
                    android:id="@+id/txt_Price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp"
                    android:text="160"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/view"
                    app:layout_constraintStart_toStartOf="@+id/txt_gender" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="60dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/shape_button_add_shoes"
                    app:layout_constraintBottom_toBottomOf="@+id/view"
                    app:layout_constraintEnd_toEndOf="@+id/view" />

                <ImageButton
                    android:contextClickable="true"
                    android:id="@+id/img_fast_request"
                    android:clickable="false"
                    android:focusable="false"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/shape"
                    android:src="@drawable/ic_plus2"
                    app:layout_constraintEnd_toEndOf="@+id/view2"
                    app:layout_constraintStart_toStartOf="@+id/view2"
                    app:layout_constraintTop_toTopOf="@+id/view2" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>
        <ImageView
            android:layout_marginStart="85dp"
            android:id="@+id/img_shoes_layout"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="150dp"
            android:rotation="-35"
            android:src="@drawable/img_shoes"
            app:layout_constraintBottom_toBottomOf="@+id/cardView_shoess"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
